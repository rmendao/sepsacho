<p id="notice"><%= notice %></p>

<h1>Listing Exploracaos</h1>

<table>
  <thead>
    <tr>
      <th>Localizacao</th>
      <th>Nome</th>
      <th>Tipo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exploracaos.each do |exploracao| %>
      <tr>
        <td><%= exploracao.localizacao %></td>
        <td><%= exploracao.nome %></td>
        <td><%= exploracao.tipo %></td>
        <td><%= link_to 'Show', exploracao %></td>
        <td><%= link_to 'Edit', edit_exploracao_path(exploracao) %></td>
        <td><%= link_to 'Destroy', exploracao, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

